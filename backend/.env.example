# Server Configuration
PORT=5000
NODE_ENV=production

# Database
MONGODB_URI=mongodb://localhost:27017/collabboard

# Authentication (JWT)
JWT_SECRET=your_super_secret_jwt_key_here
# Refresh token secret (optional if using same, but recommended separate)
REFRESH_TOKEN_SECRET=your_super_secret_refresh_key_here

# Google OAuth 2.0 Credentials
# Obtain these from Google Cloud Console (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Callback URL must be registered in Google Console
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Frontend URL (CORS & Redirects)
CLIENT_URL=http://localhost:5173
